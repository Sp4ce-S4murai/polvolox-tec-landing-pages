<header class="fixed top-0 left-0 right-0 z-50 bg-gray-900/80 backdrop-blur-md border-b border-gray-800">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-xl font-extrabold text-white hover:text-blue-400 transition-colors">
          A Forja de Páginas
        </a>
      </div>
      
      <!-- Navigation Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#como-funciona" class="text-gray-300 hover:text-white px-3 py-2 text-sm font-medium transition-colors">
            Como Funciona
          </a>
          <a href="#planos" class="text-gray-300 hover:text-white px-3 py-2 text-sm font-medium transition-colors">
            Planos
          </a>
          <a href="/portfolio" class="text-gray-300 hover:text-white px-3 py-2 text-sm font-medium transition-colors">
            Portfólio
          </a>
        </div>
      </div>
      
      <!-- CTA Button -->
      <div class="flex items-center">
        <a 
          href="#contato" 
          class="bg-gradient-to-r from-blue-500 to-violet-500 text-white px-6 py-2 rounded-lg text-sm font-semibold hover:from-blue-600 hover:to-violet-600 transition-all duration-200 transform hover:scale-105"
        >
          Começar Projeto
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="text-gray-300 hover:text-white focus:outline-none focus:text-white"
          id="mobile-menu-button"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-gray-800 rounded-lg mt-2">
        <a href="#como-funciona" class="text-gray-300 hover:text-white block px-3 py-2 text-base font-medium">
          Como Funciona
        </a>
        <a href="#planos" class="text-gray-300 hover:text-white block px-3 py-2 text-base font-medium">
          Planos
        </a>
        <a href="/portfolio" class="text-gray-300 hover:text-white block px-3 py-2 text-base font-medium">
          Portfólio
        </a>
        <a 
          href="#contato" 
          class="bg-gradient-to-r from-blue-500 to-violet-500 text-white block px-3 py-2 text-base font-medium rounded-lg mt-2"
        >
          Começar Projeto
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>